<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Welcome to +Habits</h1>
  <p class="mb-6">Track and strengthen your positive habits with ease.</p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">

    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-xl font-semibold mb-2">Quick Stats</h2>
      <ul>
        <li>Total Activities Completed:<strong> <%= @total_activities %></strong></li>
        <li>Most Frequent Activity: <strong><%= @most_frequent_activity %></strong></li>
        <li>Current Streak: <strong><%= @current_streak %> days </strong></li>
      </ul>
    </div>

    <div class="bg-white p-4 rounded shadow">
        <h2 class="text-xl font-semibold mb-2">Recent Completed Activities</h2>
        <ul>
      <% @recent_activities.each do |activity| %>
        <li class="mb-2 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
          </svg>
          <strong><%= activity.activity_type.name %></strong> - <%= activity.date %> - <%= activity.duration %> minutes - 
           <%= truncate(activity.notes, length: 30, separator: ' ') %>
        </li>
      <% end %>
    </ul>
      </div>
    </div>

  <div class="flex justify-between">
    <a href="<%= new_activity_log_path %>" class="bg-gray-700 text-white py-2 px-4 rounded">+ New Activity</a>
    <div class="flex space-x-4">
      <a href="<%= activity_logs_path %>" class="bg-slate-400 text-white py-2 px-4 rounded">View All Activities</a>
      <a href="<%= activity_types_path %>" class="bg-slate-900 text-white py-2 px-4 rounded">View All Activity Types</a>
    </div>
  </div>
</div>
